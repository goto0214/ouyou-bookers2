<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@index.user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %><br>
            <%= @index.user.name %>
            <% end %>
          </td>
          <td><%= link_to @index.title, book_path(@index) %></td>
          <td><%= @index.body %></td>
          <td id="favorite_buttons_<%= @index.id %>">
            <%= render "favorites/favorite", book: @index %>
          </td>
          <td>コメント件数：<%= @index.book_comments.count %></td>
          <% if @index.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@index), class: "btn btn-sm btn-success edit_book_#{@index.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@index), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@index.id}"%></td>
          <% end %>
        </tr>
      </table>
      <div>
        <% @index.book_comments.each do |comment| %>
        <div>
          <%= link_to user_path(comment.user) do %>
            <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no-image-icon.jpg" %><br>
            <%= comment.user.name %>
          <% end %>
          <%= comment.comment %>
        </div>
          <% if comment.user == current_user %>
            <div>
              <%= link_to "削除する", book_book_comment_path(comment.book, comment), method: :delete, class: "text-danger" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mt-4">
        <%= form_with(model:[@index, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5', placeholder: "コメント", class: "form-control" %>
          <%= f.submit "送信", class: "mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>