<p class="mb-3 border-bottom">コメント件数：<%= index.book_comments.count %></p>
<% index.book_comments.each do |comment| %>
  <div>
    <%= link_to user_path(comment.user) do %>
      <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no-image-icon.jpg" %><br>
      <%= comment.user.name %>
    <% end %>
    <%= comment.comment %>
  </div>
    <% if comment.user == current_user %>
      <div>
        <%= link_to "削除する", book_book_comment_path(comment.book, comment), method: :delete, remote: true, class: "text-danger" %>
      </div>
    <% end %>
  <% end %>